{
	"name": "@neisanworks/neisan-mongo",
	"description": "A schema-safe, Zod-powered MongoDB driver with class-modeling, functional querying, native async iteration, and built-in validation for unique constraints.",
	"version": "1.0.2",
	"author": "@neisanworks",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "rm -rf dist && tsc",
		"clean": "rm -rf dist",
		"prepare": "bun run build",
		"typecheck": "tsc --noEmit"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"engines": {
		"bun": "^1.0.0",
		"node": ">=18"
	},
	"keywords": [
		"bun",
		"typescript",
		"database",
		"mongodb",
		"class-model",
		"nosql",
		"object-database"
	],
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/bun": "latest",
		"ts-patch": "^3.3.0"
	},
	"peerDependencies": {
		"typescript": "~5.9.3"
	},
	"dependencies": {
		"mongodb": "^7.0.0",
		"zod": "^4.1.12"
	},
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/@neisanworks/neisan-mongo.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"bugs": {
		"url": "https://github.com/@neisanworks/neisan-mongo/issues"
	},
	"homepage": "https://github.com/@neisanworks/neisan-mongo#readme"
}
