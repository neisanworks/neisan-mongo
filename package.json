{
  "name": "@neisanworks/neisan-mongo",
  "description": "JS/TS class-driven MongoDB driver",
  "version": "0.1.2",
  "author": "@neisanworks",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "clean": "rm -rf dist",
    "prepare": "bun run build",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "bun": "^1.0.0",
    "node": ">=18"
  },
  "keywords": [
    "bun",
    "typescript",
    "database",
    "mongodb",
    "class-model",
    "nosql",
    "object-database"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "mongodb": "^7.0.0",
    "zod": "^4.1.12"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/@neisanworks/neisan-mongo.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "bugs": {
    "url": "https://github.com/@neisanworks/neisan-mongo/issues"
  },
  "homepage": "https://github.com/@neisanworks/neisan-mongo#readme"
}
